<%- include('partials/header') %>

  <!-- ================= HERO ================= -->
  <header class="hero">
    <div class="container text-center">
      <h1 class="hero-title">Find the perfect <span>Job</span> that fits your life</h1>
      <p class="hero-subtitle">Discover thousands of job opportunities matching your skills, experience, and lifestyle.
        Join JobWhisper and start moving brains today!</p>

      <!-- Search Box -->
      <form class="search-box" action="jobs.html" method="GET">
        <div class="search-input-group">
          <i data-lucide="search"></i>
          <input type="text" name="q" placeholder="Job title, keywords, or company">
        </div>
        <div class="search-input-group">
          <i data-lucide="map-pin"></i>
          <input type="text" name="location" placeholder="City, state, or remote">
        </div>
        <button type="submit" class="btn btn-secondary search-btn">Find Jobs</button>
      </form>

      <!-- Suggested Tags -->
      <div class="suggested-tags">
        <span>Suggested:</span>
        <a href="jobs.html?category=engineering">Engineering</a>
        <a href="jobs.html?category=marketing">Marketing</a>
        <a href="jobs.html?category=design">UI/UX Design</a>
        <a href="jobs.html?category=data">Data Analyst</a>
      </div>
    </div>
  </header>

  <!-- ================= POPULAR CATEGORIES ================= -->
  <section class="container my-4 text-center">
    <h2 class="section-title">Popular Job Categories</h2>
    <p class="section-subtitle">Explore open positions across different industries</p>

    <div class="categories-grid">
      <!-- Category 1 -->
      <div class="category-card" onclick="window.location.href='jobs.html?category=design'">
        <div class="category-icon">
          <i data-lucide="pen-tool"></i>
        </div>
        <h3>Design & Creative</h3>
        <p>1,240 open positions</p>
      </div>

      <!-- Category 2 -->
      <div class="category-card" onclick="window.location.href='jobs.html?category=marketing'">
        <div class="category-icon">
          <i data-lucide="trending-up"></i>
        </div>
        <h3>Marketing & Sales</h3>
        <p>850 open positions</p>
      </div>

      <!-- Category 3 -->
      <div class="category-card" onclick="window.location.href='jobs.html?category=it'">
        <div class="category-icon">
          <i data-lucide="laptop"></i>
        </div>
        <h3>Information Technology</h3>
        <p>2,150 open positions</p>
      </div>

      <!-- Category 4 -->
      <div class="category-card" onclick="window.location.href='jobs.html?category=medical'">
        <div class="category-icon">
          <i data-lucide="heart-pulse"></i>
        </div>
        <h3>Medical & Nursing</h3>
        <p>4,100 open positions</p>
      </div>
    </div>

    <div class="mt-2" style="margin-top: 3rem;">
      <a href="/jobs" class="btn btn-outline">Browse All Categories <i data-lucide="arrow-right"
          style="width: 18px;"></i></a>
    </div>
  </section>

  <!-- ================= HOW IT WORKS ================= -->
  <section class="how-it-works">
    <div class="container text-center">
      <h2 class="section-title">How It Works</h2>
      <p class="section-subtitle">Your journey to a better career starts in 4 simple steps</p>

      <div class="steps-grid">
        <!-- Connecting Line pseudo element could go here -->

        <div class="step-card">
          <div class="step-icon">
            <i data-lucide="user-plus"></i>
            <div class="step-number">1</div>
          </div>
          <h3>Create Account</h3>
          <p>Sign up easily as a candidate to get started.</p>
        </div>

        <div class="step-card">
          <div class="step-icon">
            <i data-lucide="file-text"></i>
            <div class="step-number">2</div>
          </div>
          <h3>Create Resume</h3>
          <p>Upload your CV or build one with our tools.</p>
        </div>

        <div class="step-card">
          <div class="step-icon">
            <i data-lucide="search"></i>
            <div class="step-number">3</div>
          </div>
          <h3>Find Jobs</h3>
          <p>Search via keyword, location, or category.</p>
        </div>

        <div class="step-card">
          <div class="step-icon">
            <i data-lucide="check-circle"></i>
            <div class="step-number">4</div>
          </div>
          <h3>Apply Jobs</h3>
          <p>Apply for jobs instantly and get hired!</p>
        </div>
      </div>
    </div>
  </section>

  <!-- ================= FEATURED JOBS ================= -->
  <section class="container my-4 text-center">
    <h2 class="section-title">Latest Featured Jobs</h2>
    <p class="section-subtitle">Apply for hand-picked positions from top companies</p>

    <div class="jobs-grid text-left" style="text-align: left;">

      <!-- Job 1 -->
      <div class="job-card">
        <div class="job-card-header">
          <div class="company-logo">
            <i data-lucide="briefcase"></i>
          </div>
          <div class="job-info">
            <h3>Senior Frontend Developer</h3>
            <span class="company-name">TechCorp Innovations</span>
          </div>
        </div>

        <div class="job-badges">
          <span class="badge badge-blue">Full Time</span>
          <span class="badge badge-gold">Remote</span>
          <span class="badge badge-green">Urgent</span>
        </div>

        <div class="job-meta">
          <span><i data-lucide="map-pin" style="width: 16px;"></i> Nairobi, KE (Remote Option)</span>
          <span><i data-lucide="clock" style="width: 16px;"></i> Deadline: Oct 15, 2026</span>
          <span><i data-lucide="briefcase" style="width: 16px;"></i> 3-5 Years Exp.</span>
        </div>

        <div class="job-footer">
          <div class="job-salary">Ksh 150k - 200k <span>/ month</span></div>
          <a href="/job-detail" class="btn btn-primary" style="padding: 0.5rem 1rem;">Apply Now</a>
        </div>
      </div>

      <!-- Job 2 -->
      <div class="job-card">
        <div class="job-card-header">
          <div class="company-logo">
            <i data-lucide="building-2"></i>
          </div>
          <div class="job-info">
            <h3>Marketing Manager</h3>
            <span class="company-name">Global Media Group</span>
          </div>
        </div>

        <div class="job-badges">
          <span class="badge badge-blue">Full Time</span>
          <span class="badge badge-gold">On-site</span>
        </div>

        <div class="job-meta">
          <span><i data-lucide="map-pin" style="width: 16px;"></i> Mombasa, KE</span>
          <span><i data-lucide="clock" style="width: 16px;"></i> Deadline: Nov 01, 2026</span>
          <span><i data-lucide="briefcase" style="width: 16px;"></i> 5+ Years Exp.</span>
        </div>

        <div class="job-footer">
          <div class="job-salary">Ksh 120k - 180k <span>/ month</span></div>
          <a href="/job-detail" class="btn btn-primary" style="padding: 0.5rem 1rem;">Apply Now</a>
        </div>
      </div>

      <!-- Job 3 -->
      <div class="job-card">
        <div class="job-card-header">
          <div class="company-logo">
            <i data-lucide="pie-chart"></i>
          </div>
          <div class="job-info">
            <h3>Data Analyst</h3>
            <span class="company-name">FinTrack Systems</span>
          </div>
        </div>

        <div class="job-badges">
          <span class="badge badge-blue">Contract</span>
          <span class="badge badge-green">Mid Level</span>
        </div>

        <div class="job-meta">
          <span><i data-lucide="map-pin" style="width: 16px;"></i> Nairobi, KE</span>
          <span><i data-lucide="clock" style="width: 16px;"></i> Deadline: Sep 30, 2026</span>
          <span><i data-lucide="briefcase" style="width: 16px;"></i> 2-4 Years Exp.</span>
        </div>

        <div class="job-footer">
          <div class="job-salary">Ksh 90k - 130k <span>/ month</span></div>
          <a href="/job-detail" class="btn btn-primary" style="padding: 0.5rem 1rem;">Apply Now</a>
        </div>
      </div>

    </div>

    <div class="mt-2" style="margin-top: 3rem;">
      <a href="/jobs" class="btn btn-secondary">View All Jobs <i data-lucide="arrow-right"
          style="width: 18px;"></i></a>
    </div>
  </section>

  <!-- ================= PRE-FOOTER STATS ================= -->
  <section class="stats-section">
    <div class="container stats-grid">
      <div class="stat-item">
        <h2>1,250+</h2>
        <p>Live Jobs</p>
      </div>
      <div class="stat-item">
        <h2>840+</h2>
        <p>Total Companies</p>
      </div>
      <div class="stat-item">
        <h2>25k+</h2>
        <p>Total Candidates</p>
      </div>
      <div class="stat-item">
        <h2>140+</h2>
        <p>Daily New Jobs</p>
      </div>
    </div>
  </section>

  <%- include('partials/footer') %>
<%- include('partials/header') %>

    <!-- HEADER -->
    <div class="hero" style="padding: 4rem 0 3rem;">
        <div class="container">
            <h1 class="hero-title" style="font-size: 2.5rem; margin-bottom: 0.5rem;">Browse Open Positions</h1>
            <p class="hero-subtitle" style="margin-left: 0; text-align: left;">Find the most relevant jobs matching your
                criteria.</p>
        </div>
    </div>

    <!-- MAIN CONTENT -->
    <section class="container my-4">
        <div class="page-layout">

            <!-- SIDEBAR (Filters) -->
            <aside class="sidebar">
                <form id="filter-form">
                    <!-- Keyword -->
                    <div class="sidebar-widget">
                        <h4 class="sidebar-title">Search Keyword</h4>
                        <div style="position: relative;">
                            <i data-lucide="search"
                                style="position: absolute; left: 10px; top: 10px; color: var(--text-light); width: 18px;"></i>
                            <input type="text" class="form-control" placeholder="Job title, keywords..."
                                style="padding-left: 35px;">
                        </div>
                    </div>

                    <!-- Location -->
                    <div class="sidebar-widget">
                        <h4 class="sidebar-title">Location</h4>
                        <div style="position: relative;">
                            <i data-lucide="map-pin"
                                style="position: absolute; left: 10px; top: 10px; color: var(--text-light); width: 18px;"></i>
                            <input type="text" class="form-control" placeholder="City or region"
                                style="padding-left: 35px;">
                        </div>
                    </div>

                    <!-- Category -->
                    <div class="sidebar-widget">
                        <h4 class="sidebar-title">Category</h4>
                        <label class="checkbox-label"><input type="checkbox" name="cat" value="design"> Design &
                            Creative (1,240)</label>
                        <label class="checkbox-label"><input type="checkbox" name="cat" value="marketing"> Marketing &
                            Sales (850)</label>
                        <label class="checkbox-label"><input type="checkbox" name="cat" value="it"> IT & Software
                            (2,150)</label>
                        <label class="checkbox-label"><input type="checkbox" name="cat" value="medical"> Medical
                            (4,100)</label>
                    </div>

                    <!-- Job Type -->
                    <div class="sidebar-widget">
                        <h4 class="sidebar-title">Job Type</h4>
                        <label class="checkbox-label"><input type="checkbox" name="type" value="full-time"> Full
                            Time</label>
                        <label class="checkbox-label"><input type="checkbox" name="type" value="part-time"> Part
                            Time</label>
                        <label class="checkbox-label"><input type="checkbox" name="type" value="contract">
                            Contract</label>
                        <label class="checkbox-label"><input type="checkbox" name="type" value="remote"> Remote</label>
                    </div>

                    <button type="button" class="btn btn-primary" style="width: 100%;">Apply Filters</button>
                </form>
            </aside>

            <!-- JOB LISTINGS -->
            <main>
                <div class="job-listing-header">
                    <p>Showing <strong>1-10</strong> of <strong>8,300</strong> jobs</p>
                    <select class="sort-select">
                        <option value="newest">Sort by: Newest First</option>
                        <option value="oldest">Sort by: Oldest</option>
                        <option value="salary-high">Salary: High to Low</option>
                    </select>
                </div>

                <div class="jobs-grid" style="grid-template-columns: 1fr; gap: 1.5rem;">

                    <!-- Job Card 1 -->
                    <div class="job-card" style="display: flex; gap: 2rem; align-items: center; padding: 1.5rem;">
                        <div class="company-logo" style="width: 80px; height: 80px; font-size: 2rem;">
                            <i data-lucide="briefcase"></i>
                        </div>
                        <div style="flex: 1;">
                            <div style="display: flex; justify-content: space-between; align-items: flex-start;">
                                <div>
                                    <h3 style="font-size: 1.3rem; margin-bottom: 0.25rem;"><a
                                            href="/job-detail">Senior Frontend Developer</a></h3>
                                    <span class="company-name"
                                        style="color: var(--color-primary); font-weight: 500;">TechCorp
                                        Innovations</span>
                                </div>
                                <!-- Save Button -->
                                <button
                                    style="background: none; border: none; color: var(--text-light); cursor: pointer;"><i
                                        data-lucide="bookmark"></i></button>
                            </div>

                            <div class="job-meta"
                                style="flex-direction: row; gap: 1.5rem; margin-top: 1rem; margin-bottom: 1rem;">
                                <span><i data-lucide="map-pin" style="width: 16px;"></i> Nairobi, KE (Remote)</span>
                                <span><i data-lucide="clock" style="width: 16px;"></i> Oct 15, 2026</span>
                                <span style="font-weight: 600; color: var(--text-dark);">Ksh 150k - 200k / mo</span>
                            </div>

                            <div class="job-badges">
                                <span class="badge badge-blue">Full Time</span>
                                <span class="badge badge-gold">Remote</span>
                                <span class="badge badge-green">Urgent</span>
                            </div>
                        </div>
                    </div>

                    <!-- Job Card 2 -->
                    <div class="job-card" style="display: flex; gap: 2rem; align-items: center; padding: 1.5rem;">
                        <div class="company-logo" style="width: 80px; height: 80px; font-size: 2rem;">
                            <i data-lucide="building-2"></i>
                        </div>
                        <div style="flex: 1;">
                            <div style="display: flex; justify-content: space-between; align-items: flex-start;">
                                <div>
                                    <h3 style="font-size: 1.3rem; margin-bottom: 0.25rem;"><a
                                            href="/job-detail">Marketing Manager</a></h3>
                                    <span class="company-name"
                                        style="color: var(--color-primary); font-weight: 500;">Global Media Group</span>
                                </div>
                                <button
                                    style="background: none; border: none; color: var(--text-light); cursor: pointer;"><i
                                        data-lucide="bookmark"></i></button>
                            </div>

                            <div class="job-meta"
                                style="flex-direction: row; gap: 1.5rem; margin-top: 1rem; margin-bottom: 1rem;">
                                <span><i data-lucide="map-pin" style="width: 16px;"></i> Mombasa, KE</span>
                                <span><i data-lucide="clock" style="width: 16px;"></i> Nov 01, 2026</span>
                                <span style="font-weight: 600; color: var(--text-dark);">Ksh 120k - 180k / mo</span>
                            </div>

                            <div class="job-badges">
                                <span class="badge badge-blue">Full Time</span>
                                <span class="badge badge-gold">On-site</span>
                            </div>
                        </div>
                    </div>

                    <!-- Job Card 3 -->
                    <div class="job-card" style="display: flex; gap: 2rem; align-items: center; padding: 1.5rem;">
                        <div class="company-logo" style="width: 80px; height: 80px; font-size: 2rem;">
                            <i data-lucide="pie-chart"></i>
                        </div>
                        <div style="flex: 1;">
                            <div style="display: flex; justify-content: space-between; align-items: flex-start;">
                                <div>
                                    <h3 style="font-size: 1.3rem; margin-bottom: 0.25rem;"><a
                                            href="/job-detail">Data Analyst</a></h3>
                                    <span class="company-name"
                                        style="color: var(--color-primary); font-weight: 500;">FinTrack Systems</span>
                                </div>
                                <button
                                    style="background: none; border: none; color: var(--text-light); cursor: pointer;"><i
                                        data-lucide="bookmark"></i></button>
                            </div>

                            <div class="job-meta"
                                style="flex-direction: row; gap: 1.5rem; margin-top: 1rem; margin-bottom: 1rem;">
                                <span><i data-lucide="map-pin" style="width: 16px;"></i> Nairobi, KE</span>
                                <span><i data-lucide="clock" style="width: 16px;"></i> Sep 30, 2026</span>
                                <span style="font-weight: 600; color: var(--text-dark);">Ksh 90k - 130k / mo</span>
                            </div>

                            <div class="job-badges">
                                <span class="badge badge-blue">Contract</span>
                                <span class="badge badge-green">Mid Level</span>
                            </div>
                        </div>
                    </div>

                </div>

                <!-- Pagination -->
                <div style="display: flex; justify-content: center; gap: 0.5rem; margin-top: 3rem;">
                    <button class="btn btn-outline" style="padding: 0.5rem 1rem;">Prev</button>
                    <button class="btn btn-primary" style="padding: 0.5rem 1rem;">1</button>
                    <button class="btn btn-outline" style="padding: 0.5rem 1rem;">2</button>
                    <button class="btn btn-outline" style="padding: 0.5rem 1rem;">3</button>
                    <button class="btn btn-outline" style="padding: 0.5rem 1rem;">Next</button>
                </div>

            </main>

        </div>
    </section>

    <!-- FOOTER -->
    <footer class="footer">
        <div class="container">
            <div class="footer-grid">
                <div class="footer-col" style="grid-column: span 1;">
                    <a href="/" class="brand-logo-container" style="align-items: flex-start; margin-bottom: 1.5rem;">
            <svg class="brand-wave" viewBox="0 0 40 10" xmlns="http://www.w3.org/2000/svg" style="left: 35%;">
              <path d="M0 8 Q 10 0, 20 5 T 40 5 L 40 10 Q 30 10, 20 5 T 0 10 Z" />
            </svg>
            <div class="footer-brand">JOB<span>WHISPER</span></div>
            <div class="footer-logo-text">Moving Brains</div>
          </a>
                    <p style="margin-top: 1rem;">Your ultimate destination for finding your dream job. We connect talent
                        with opportunities worldwide safely and intuitively.</p>
                </div>
                <div class="footer-col footer-links">
                    <h4>For Candidates</h4>
                    <ul>
                        <li><a href="/jobs">Browse Jobs</a></li>
                        <li><a href="/candidate-dashboard">Candidate Dashboard</a></li>
                    </ul>
                </div>
                <div class="footer-col footer-links">
                    <h4>For Employers</h4>
                    <ul>
                        <li><a href="/post-job">Post a Job</a></li>
                        <li><a href="/employer-dashboard">Employer Dashboard</a></li>
                    </ul>
                </div>
                <div class="footer-col footer-links">
                    <h4>About Us</h4>
                    <ul>
                        <li><a href="/contact">Contact Us</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                    </ul>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2026 JobWhisper.co.ke. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="js/main.js"></script>
    <script>lucide.createIcons();</script>
</body>

</html>